@page
@using Volo.Abp.Account.Web.Pages.Account
@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Login | QAProject Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap">
</head>

<body>
    <div class="login-page">
        <div class="login-left">
            <div class="brand">
                <span class="brand-icon">?</span> QAProject Portal
            </div>

            <div class="hero-content">
                <h1>Questions answered. <br />Solutions delivered.</h1>
                <p>
                    A centralized platform designed to streamline communication.
                    Ask questions, provide answers, and track every resolution in one place.
                </p>

                <ul class="feature-list">
                    <li>
                        <span class="icon">✓</span>
                        <div>
                            <strong>Unified Collaboration</strong>
                            <span>A single hub for all users to exchange information effectively.</span>
                        </div>
                    </li>
                    <li>
                        <span class="icon">✓</span>
                        <div>
                            <strong>Trackable Progress</strong>
                            <span>Monitor the status of every question from open to resolve.</span>
                        </div>
                    </li>
                    <li>
                        <span class="icon">✓</span>
                        <div>
                            <strong>Data-Driven Insights</strong>
                            <span>View activity statistics and export reports with ease.</span>
                        </div>
                    </li>
                </ul>
            </div>

            <div class="login-footer-text">
                © 2026 QAProject Enterprise System
            </div>
        </div>

        <div class="login-right">
            <div class="login-card">
                <h2>Welcome back</h2>
                <p class="subtitle">Please log in to access your dashboard</p>

                @* Hiển thị mọi Page Alerts (ABP tự set khi đăng nhập sai) *@
                @await Component.InvokeAsync("PageAlerts", new { name = "" })

                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>Username or Email</label>
                        <input asp-for="LoginInput.UserNameOrEmailAddress" class="form-control"
                            placeholder="Enter your account" required />
                        <span asp-validation-for="LoginInput.UserNameOrEmailAddress" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input asp-for="LoginInput.Password" type="password" class="form-control"
                            placeholder="Enter your password" required />
                        <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn-login">Sign In</button>
                </form>
            </div>
        </div>
    </div>
    <abp-script-bundle name="Account.Login" />
    <script src="~/libs/jquery/jquery.min.js"></script>
    <script src="~/libs/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/libs/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
